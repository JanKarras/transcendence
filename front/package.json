{
  "name": "frontend",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc && yarn build:css",
    "build:css": "postcss src/styles.css -o public/assets/tailwind.css",
    "watch:css": "postcss src/styles.css -o public/assets/tailwind.css --watch",
    "watch:ts": "tsc --watch",
    "tailwind": "node --experimental-specifier-resolution=node ./node_modules/tailwindcss/dist/cli.mjs",
    "dev": "concurrently \"yarn watch:ts\" \"yarn watch:css\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "wscat": "^6.1.0"
  }
}
